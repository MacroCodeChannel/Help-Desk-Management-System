                <li>
                    <a asp-action="Index" asp-controller="Home">
                        <div class="parent-icon">
                            <i class="bi bi-house-fill"></i>
                        </div>
                        <div class="menu-title">Dashboard</div>
                    </a>
                </li>
                <li>
                    <a href="javascript:;" class="has-arrow">
                        <div class="parent-icon">
                            <i class="bi bi-grid-fill"></i>
                        </div>
                        <div class="menu-title">Tickets</div>
                    </a>
                    <ul>
                        <li> <a asp-action="Index" asp-controller="Tickets"><i class="bi bi-circle"></i>Recent Tickets</a>
                        <li> <a asp-action="AssignedTickets" asp-controller="Tickets"><i class="bi bi-circle"></i>Assigned Tickets</a>
                        <li> <a asp-action="ResolvedTickets" asp-controller="Tickets"><i class="bi bi-circle"></i>Resolved Tickets</a>
